{% extends 'templates/app.twig'%}
{% set page_title = 'Sign In' %}
{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Sign Up
                </div>
                <div class="panel-body">
                    <form method="post" enctype="multipart/form-data" class="align-items-center" action="{{ path_for('auth.signin') }}">
                        {# {% if errors is defined %}
                            {{ errors | json_encode }}
                        {% endif %} #}
                        <div class="form-group  {{ errors.email ? ' has-error' : '' }}">
                            <div class="input-group">
                                <span class="input-group-addon form-span">email</span>
                                <input id="email" name="email" class="form-control" placeholder="you@example.com" type="email" value="{{ old.email }}">
                            </div>
                            {# {% if errors.email %}
                                <span style="margin-left:15%;" class="help-block">{{ errors.email | first }}</span>
                            {% endif %} #}
                        </div>
                        <div class="form-group  {{ errors.password ? ' has-error' : '' }}">
                            <div class="input-group">
                                <span class="input-group-addon form-span">password</span>
                                <input id="password" name="password" class="form-control" type="password">
                            </div>
                            {# {% if errors.password %}
                                <span style="margin-left:15%;" class="help-block">{{ errors.password | first }}</span>
                            {% endif %} #}
                        </div>
                        <div class="form-group text-center">
                            <button style="width:75%" id="singlebutton" name="singlebutton" class="btn btn-default">Sign in</button>
                        </div>
                        {{ csrf.field | raw }}
                    </form>
                    <p class="text-center">
                        <a href="#">Forgot your password?</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}